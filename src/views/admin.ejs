<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="https://crm-najot.herokuapp.com/image/Najot_Talim-01.png" sizes="24x24" type="image/x-icon">
    <title>  Najot ta'lim CRM</title>
    <link rel="stylesheet" href="admin.css">
</head>

<body>

    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon">

                            <img class="iconLogo" src="https://crm-najot.herokuapp.com/image/Najot_Talim-01-removebg-preview.png" width="65" height="65" alt="">
                        </span>
                        <span class="title">Najot ta'lim crm</span>
                    </a>
                </li>

                <li class="hovered">
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Ma'lumotlar</span>
                    </a>
                </li>

                <li>
                    <a href="teacher">
                        <span class="icon">
                            <ion-icon name="people-outline"></ion-icon>
                        </span>
                        <span class="title">O'qituvchi qo'shish</span>
                    </a>
                </li>

                <li>
                    <a href="createReader">
                        <span class="icon">
                            <ion-icon name="chatbubble-outline"></ion-icon>
                        </span>
                        <span class="title">O'quvchi qo'shish</span>
                    </a>
                </li>

                <li>
                    <a href="Gruop">
                        <span class="icon">
                            <ion-icon name="help-outline"></ion-icon>
                        </span>
                        <span class="title">Guruh yaratish</span>
                    </a>
                </li>

                <li>
                    <a href="Crouser">
                        <span class="icon">
                            <ion-icon name="settings-outline"></ion-icon>
                        </span>
                        <span class="title">Kurs qo'shish</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                <div class="search">
                    <label>
                        <input type="text" placeholder="Search here">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>

                <div class="user">
                    <p class="userAdmin"></p>
                </div>
            </div>

            <div class="cardBox">
                <div class="card">
                    <div>
                        <div class="numbers"><%= StudentUser.length  %> </div>
                        <div class="cardName">O'quvchilar soni</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="eye-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers"><%= course.length  %></div>
                        <div class="cardName">O'qituvchi soni</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="cart-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers"><%= GroupNames.length  %> </div>
                        <div class="cardName">Guruhlar Ro'yxati</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="chatbubbles-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers"><%= course.length  %> </div>
                        <div class="cardName">Kurslar soni</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="cash-outline"></ion-icon>
                    </div>
                </div>
            </div>

            <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>O'quvchilar Ro'yxati</h2>
                        <a href="#" class="btn">To'liq ko'rish</a>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <td>Ism Familyasi</td>
                                <td>Kurs narxi</td>
                                <td>Kurs to'lovi</td>
                                <td>Kurs nomi</td>
                            </tr>
                        </thead>

                        <tbody>
                            <% StudentUser.map(elem =>{ %> 
                                <tr>
                                    <td><%= elem.name%> <%= elem.surname  %> </td>
                                    <td><%= elem.age%> </td>
                                    <td><%= elem.GroupName%> </td>
                                    <td><%= elem.telefon%> </td>
                                    <td><span class="status delivered"><%= elem.cursname%> </span></td>
                                </tr>
                                <% }) %> 
                        </tbody>
                    </table>
                </div>

                <!-- ================= New Customers ================ -->
                <div class="recentCustomers">
                    <div class="cardHeader">
                        <h2>O'qituvchilar Ro'yxati</h2>
                    </div>

                    <table>
                        <% TeacherUser.map(elem =>{ %> 
                        <tr>
                            <td width="60px">
                                <div class="imgBx"><img alt="" src=<%= elem.AvatarUser %> ></div>
                            </td>
                            <td>
                                <h4><%= elem.name  %> <%= elem.surname  %>  <br> <span><%= elem.cursname %> </span></h4>
                            </td>
                          
                        </tr>
                        <% }) %>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- =========== Scripts =========  -->
    <script src="admin.js"></script>

    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>